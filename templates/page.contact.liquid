<section class="bg-light">
  <div class="p-4 my-5 conatiner">
     <div class="text-center">
        <h3 class="text-primary">{{ page.title }}</h3>
        <p class="lead">Lorem ipsum, dolor sit amet consectetur adipisic</p>
     </div>
     <div class=" d-flex align-items-center justify-content-center">
        <div class="bg-white col-md-8 col-lg-6 col-sm-10 col-12">
           <div class="p-4 rounded shadow-md">
              {% form 'contact' %}
              {% if form.posted_successfully? %} 
              <!-- success alert -->
              {% render 'success-alert'%}
              {% endif %}
              {{ form.errors | default_errors }}
              <div>
                 <label for="ContactFormName" class="form-label">Your Name</label>
                 <input type="text" id="ContactFormName" name="contact[name]" class="form-control" placeholder="Your Name" required>
              </div>
              <div class="mt-3">
                 <label for="ContactFormEmail" class="form-label">Your Email</label>
                 <input type="email" id="ContactFormEmail" name="contact[email]" class="form-control" placeholder="Your Email" required>
                 </div class="mt-3">
                 <div class="mt-3">
                    <label for="ContactFormPhone" class="form-label">Phone</label>
                    <input type="tel" id="ContactFormPhone" name="contact[phone]" class="form-control" placeholder="Phone Number" required>
                 </div>
                 <div class="mt-3 mb-3">
                    <label for="ContactFormMessage" class="form-label">Message</label>
                    <textarea id="ContactFormMessage" name="contact[body]" cols="20" rows="6" class="form-control"
                       placeholder="Message" required></textarea>
                 </div>
                 <input class="btn btn-primary" type="submit" value="Submit">
                 {% endform %}
              </div>
           </div>
        </div>
     </div>
  </div>
</section>