<section class="container">
  <div class="row my-3">
    <h2 class="text-center">{{ collection.title }}</h2>
  </div>
  <!-- filter section -->
  <div class="row justify-content-center">
    <select name="sorting" id="sort_by" class="form-select form-select-sm w-25">
      {% for option in collection.sort_options %}
        <option value="{{option.value}}"
            {% if option.value == collection.sort_by %}
              selected
            {% endif %}
        >{{option.name}}</option>
      {% endfor %}
    </select>
  </div>

  {% paginate collection.products by 10 %}
  <div class="row justify-content-center my-5">
    {% for product in collection.products %} {%assign image =
    product.featured_media.preview_image%}
    <div class="col-12 col-sm-6 col-lg-3 my-3 col-md-3">
      <div class="card h-100">
        {% if image != blank %}
        <img
          class="card-img-top img-fluid"
          src="{{ image | img_url: 'medium' }}"
          alt="{{ product.title }}"
        />
        {% else %}
        {{ "product-1" | placeholder_svg_tag: "card-img-top" }}
        {% endif %}
        <div class="card-body">
          <h5 class="card-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h5>
          <p class="card-text">{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="btn btn-primary">Add To Cart</a>
        </div>
      </div>
    </div>
    {% else %}
    <p>no matches</p>
    {% endfor %}
  </div>
  <!-- pagination -->
  {% if paginate.pages > 1 %}
  <nav class="mb-5" aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      {% if paginate.previous.is_link %}
      <li class="page-item">
        <a href="{{ paginate.previous.url }}" class="page-link shadow-none">{{
          paginate.previous.title
        }}</a>
      </li>
      {% endif %} {% for part in paginate.parts %} {% if part.is_link %}
      <li class="page-item">
        <a href="{{ part.url }}" class="page-link shadow-none">{{
          part.title
        }}</a>
      </li>
      {% else %}
      <li class="page-item disabled">
        <a href="{{ part.url }}" class="page-link shadow-none">{{
          part.title
        }}</a>
      </li>
      {% endif %} {% endfor %} {% if paginate.next.is_link %}
      <li class="page-item">
        <a href="{{ paginate.next.url }}" class="page-link shadow-none">{{
          paginate.next.title
        }}</a>
      </li>
      {% endif %}
    </ul>
  </nav>
  {% endif %} {% endpaginate %}
</section>
