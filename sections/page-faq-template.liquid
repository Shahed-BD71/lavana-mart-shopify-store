<div class="container">
    <div class="row my-4">
        <h3 class="text-center">
            {{page.title}}
        </h3>
    </div>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {% for block in section.blocks %}
        <div class="accordion-item">
            <div class="accordion-header" id="collapse-header{{block.id}}">
                <button 
                    class="accordion-button collapsed shadow-none" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#collapse-{{block.id}}"
                    aria-expanded="false"
                    aria-controls="{{block.id}}"
                >
                    <h5 class="fw-bold">{{block.settings.title}}</h5>
                </button>
            </div>
            <div class="accordion-collapse collapse p-3" 
                id="collapse-{{block.id}}" 
                aria-labelledby="collapse-header-{{block.id}}" 
                data-bs-parent="#accordionFAQ">
                {{block.settings.answer}}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name":"FAQ",
    "blocks":[
       {
          "name":"FAQ Items",
          "type":"faq",
          "settings":[
             {
                "type":"text",
                "id":"title",
                "label":"Title",
                "default":"Example FAQ Title"
             },
             {
                "type":"richtext",
                "id":"answer",
                "label":"Answer"
             }
          ]
       }
    ]
 }
{% endschema %}