<section class="inner-hero-section">
    {% if section.settings.image != blank %}
    <img src="{{section.settings.image | img_url: "large"}}" alt="">
    {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg'}}
    {% endif %}
    <div class="container mt-4 py-5">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="text-warning font-bold">{{section.settings.title}}</h1>
                <p class="font-bold">{{section.settings.description}}</p>
                <a href="{{section.settings.button_link}}" class="btn btn-success">{{section.settings.button_label}}</a>
            </div>
        </div>
    </div>
</section>
{% schema %}
{ 
    "name": "Hero Section",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Hero Image"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example Paragraph</p>",
            "label": "Heading Description"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button label"
        },
        {
            "type": "url",
            "id": "button_link", 
            "label": "Heading Button link"
        },
        {
            "type": "checkbox",
            "id": "dynamic_buttons_checkbox",
            "label": "Enable Dynamic Buttons",
            "default": false
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name": "Hero Section"
        }
    ]
}
{% endschema %}